{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "imports": {
    "@std/": "https://deno.land/std@0.208.0/",
    "@std/assert": "https://deno.land/std@0.208.0/assert/mod.ts",
    "@std/path": "https://deno.land/std@0.208.0/path/mod.ts",
    "@std/fs": "https://deno.land/std@0.208.0/fs/mod.ts",
    "@std/json": "https://deno.land/std@0.208.0/json/mod.ts"
  },
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write --allow-net --allow-run main.ts",
    "start": "deno run --allow-read --allow-write --allow-net --allow-run main.ts",
    "test": "deno test --allow-read --allow-write --allow-net --allow-run",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "fmt": {
    "files": {
      "include": ["src/", "tests/"],
      "exclude": ["dist/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/", "tests/"],
      "exclude": ["dist/"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars"]
    }
  },
  "permissions": {
    "read": ["./generated", "./scripts", "./config"],
    "write": ["./generated", "./logs"],
    "net": false,
    "run": false,
    "env": false,
    "sys": false,
    "ffi": false
  }
}